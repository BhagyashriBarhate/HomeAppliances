

      <html>

        <body>
        
            <div id="right-panel" class="right-panel">
        
                <% include header %>
        
                <div class="content pb-0">
        
                    <section>
        
                        <div class="content">
                            <div class="animated fadeIn">
                                <div class="row">
        
                                    <div class="col-md-12">
                                        <div class="card">
                                            <div class="card-header col-12 col-md-12">
                                                <div class="row">
                                                    <div class="col-lg-8"><strong class="card-title col-md-8">Order
                                                            Details</strong></div>
        
                                                    </div></br>
                                            </div>
        
        
                                            <div class="card-body">
                                                <form action="#" method="post">
                                                    <div class="form-inline">

                                                        <!--<button type="button" name="btnall" id="btnall" class="btn btn-primary" style="display: none;"><i class="fa fa-list"></i></button>-->
                                                    </div>
                                                </form>
                                                
                                                <% if(order.length>0) { %>
                                                    <input type="text" id="myInput" style="width: 200px;" placeholder="search Orders" class="form-control col-md-2"
                                                    required="">&nbsp;&nbsp;
                                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
        

                                                    <thead>
                                                        <tr>
                                                            <!--   <th>Select</th>  -->
                                                            <th>Sr.no</th>
                                                            <th>Name</th>
                                                            <th>Image</th>
                                                            <th>Date</th>
                                                            <th>Price</th>
                                                            
                                                            <th>Quantity</th>
                                                            <th>Total</th>
                                                            <th>Payment</th>
                                                            <th>Delivery</th>
                                                            <!-- <th></th>                                                            
                                                            <th></th> -->
        
                                                           
                                                        </tr>
                                                    </thead>
                                                    <tbody  id="myTable">
                                                        <% for(var i=0; i<order.length;i++) { %>
                                                        <tr>
                                                            <td ><%= i+1 %></td>
                                                             <td><%= order[i].product_id.pname%></td>
                                                             <td><img style="height: 60px;width:60px;"
                                                                 src='/uplodes/<%= order[i].product_id.imagename %>'></td>
                                                             <td><%=order[i].date%></td>
                                                             <td><%= order[i].price%></td>
                                                             <% var subtotal=  (order[i].qty)  * (order[i].price) %>

                                                             <td><%= order[i].qty %></td>
                                                             <td><%=subtotal%></td>
                                                            <td>
                                                                
                                                                <% if ( order[i].Pstatus  ) {%>
                                                                    <a href="./statusDone/<%= order[i]._id %>"><i
                                                                            class="fa fa-toggle-on fa-lg"></i></a>
                                                                    <% } else { %>
                                                                    <a href="./statusPending/<%= order[i]._id %>"><i
                                                                            class="fa fa-toggle-off fa-lg"></i></a>
                                                                    <% } %>
                                                            </td>
                                                            <td>
                                                                
                                                                <% if ( order[i].Dstatus  ) {%>
                                                                    <a href="./statusD/<%= order[i]._id %>"><i
                                                                            class="fa fa-toggle-on fa-lg"></i></a>
                                                                    <% } else { %>
                                                                    <a href="./statusP/<%= order[i]._id %>"><i
                                                                            class="fa fa-toggle-off fa-lg"></i></a>
                                                                    <% } %>
                                                            </td>

                                                        </tr>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                                <% } else { %>
                                                No Record Found
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
        
        
                                </div>
                            </div><!-- .animated -->
                        </div><!-- .content -->
                    </section>
        
        
                </div>
        
                <div class="clearfix"></div>
            </div>
        
        </body>
        
        </html>