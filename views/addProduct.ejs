<div>
  <%- include('header'); -%>

<div class="row mt-5">
  <div class="col-md-12 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">

          <i class=""></i> Add Product
       </h1>
       <form method="post" enctype="multipart/form-data" action="/users/uplode">
        <div class="col-md-6 m-auto">
          <div class="form-group">
              <label for="name">Add Product</label>
              <input type="text" placeholder="Enter Product"  class="form-control" name="pname" required> </td>
          </div>

          <div class="form-group">
              <label for="file">File</label>
              <input type="file" placeholder="Enter file"  class="form-control" name="file" required> </td>
          </div>

          
          <div class="form-group">
              <label for="mobile">Price</label>
              <input type="text" placeholder="Enter Price"  class="form-control" name="price" required> </td>
          </div>
          <div class="form-group">
            <label for="mobile">Quantity </label>
            <input type="text" placeholder="Enter Quantity"  class="form-control" name="quantity" required> </td>
        </div>
        <div class="form-group">
          <label for="mobile">Warranty </label>
          <input type="text" placeholder="Enter Warranty years"  class="form-control" name="warranty" required> </td>
      </div>
      <input type="submit" class="btn btn-dark">
      <input type="button" value="Display" class="btn btn-dark " onclick="window.location='displayProduct'">

        </div>
        <div class="col-md-6 m-auto">
        <div class="form-group">
          <label for="mobile">Select Brand </label>
           <% if(brand.length>0) { %>
            <select id="brand"  name="brand_id" class="form-control">
           
              <% for(var i=0; i<brand.length;i++) { %>
              <option value=<%= brand[i]._id%>><%= brand[i].brand %></option>
              <% } %>    
          </select>
          <% } else { %>
             
          <% } %>  </div>

          <div class="form-group">
            <label for="mobile">Discount Percent </label>
            <input type="text" placeholder="Enter Discount"  class="form-control" name="discount" required> </td>
        </div>
        <div class="form-group">
          <label for="mobile">Color </label>
          <input type="text" placeholder="Enter Color"  class="form-control" name="color" required> </td>
      </div>


      <div class="form-group">
        <label for="mobile"> Select Subcategory </label>
        <% if(subcategory.length>0) { %>
          <select id="subcategory"  name="subcategory_id" class="form-control">
            
            <% for(var i=0; i<subcategory.length;i++) { %>
            <option value=<%= subcategory[i]._id%>><%= subcategory[i].scname %></option>
            <% } %>    
        </select>
        <% } else { %>
           
        <% } %>  
        </div>
       
      <div class="form-group">
        <label for="mobile">Description</label>

        <textarea id="w3review" name="desc" rows="3" cols="77" required> 
 
         </textarea>        </div>
    
        </div>

      
      
          </div>

          
  </form>            
  

  </div>
</div>
</div>

</div>