
      <html>

        <body>
        
            <div id="right-panel" class="right-panel">
        
                <% include header %>
        
                <div class="content pb-0">
        
                    <section>
        
                        <div class="content">
                            <div class="animated fadeIn">
                                <div class="row">
        
                                    <div class="col-md-12">
                                        <div class="card">
                                            <div class="card-header col-12 col-md-12">
                                                <div class="row">
                                                    <div class="col-lg-8"><strong class="card-title col-md-8">Admin
                                                            Details</strong></div>
        
                                                    <div class="col-lg-4"><a href="/users/addAdmin" id="btnnc"
                                                            class="btn btn-primary pull-right"><i class=" fa fa-plus"> Add
                                                                Admin </i></a></div>
                                                </div>
                                            </div>
        
        
                                            <div class="card-body">
                                                <form action="#" method="post">
                                                    <div class="form-inline">
                                                       
        
                                                        <!--<button type="button" name="btnall" id="btnall" class="btn btn-primary" style="display: none;"><i class="fa fa-list"></i></button>-->
                                                    </div>
                                                </form>
                                                <% if(admin.length>0) { %>
                                                    <input type="text" style="width: 200px;" id="myInput" placeholder="search for admin" class="form-control col-md-2"
                                                    required="">&nbsp;&nbsp;<br>
                                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
        
        
                                                    <thead>
                                                        <tr>
                                                            <!--   <th>Select</th>  -->
                                                           
                                                            <th>Name</th>
                                                            <th>Contact</th>
                                                            <th>Email</th>
                                                            <th>Address</th>

                                                            
        
                                                           
                                                        </tr>
                                                    </thead>
                                                    <tbody  id="myTable">
                                                        <% for(var i=0; i<admin.length;i++) { %>
                                                            <% if(admin[i].type=='admin') { %>
                                                        <tr>
                                                            <td><%= admin[i].name %></td>
                                                            <td><%= admin[i].contact %></td>
                                                            <td><%= admin[i].email %></td>
                                                            <td><%= admin[i].address %></td>
                                                            <!-- <td><%= admin[i].city %></td> -->

                                                        </tr>
                                                        <% } else { %>
                                                          
                                                            <% } %>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                                <% } else { %>
                                                    
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
        
        
                                </div>
                            </div><!-- .animated -->
                        </div><!-- .content -->
                    </section>
        
        
                </div>
        
                <div class="clearfix"></div>
            </div>
        
        </body>
        
        </html>