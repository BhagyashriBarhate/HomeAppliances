                <option value=<%= item2[i]._id%>><%= item2[i].scname %></option>
                <% } %>    
            </select>
           
            </div>

           
          <div class="form-group">
            <label for="mobile">Color </label>
            <input type="text"  value="<%= item.color %>" class="form-control" name="color" required> </td>
        </div>
  
  
         
          <div class="form-group">
            <label for="mobile">Description</label>
            <input type="long"  value="<%= item.desc %>"  class="form-control" name="desc" required> </td>
        </div>
        
            </div>
  
