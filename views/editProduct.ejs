         <form method="post" enctype="multipart/form-data" >
          <div class="col-md-6 m-auto">
            <div class="form-group">
                <label for="name">Add Product</label>
                <input type="text"   class="form-control"  value="<%= item.pname%>" name="pname" required> </td>
            </div>
  
            <div class="form-group">
                <label for="file">File</label>
                <input type="file"  value="a" name="imagename"   class="form-control"  > </td>
            </div>
  
            
            <div class="form-group">
                <label for="mobile">Price</label>
                <input type="text"  class="form-control"  value="<%= item.price%>" name="price" required> </td>
            </div>
            <div class="form-group">
              <label for="mobile">Quantity </label>
              <input type="text"   class="form-control"  value="<%= item.quantity %>" name="quantity" required> </td>
          </div>
          <div class="form-group">
            <label for="mobile">Warranty </label>
            <input type="text"   class="form-control"  value="<%= item.warranty %>" name="warranty" required> </td>
        </div>
        <input type="submit" class="btn btn-dark">
  
          </div>
          <div class="col-md-6 m-auto">
