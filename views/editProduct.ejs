              <label for="mobile">Discount Percent </label>
              <input type="text"  value="<%= item.discount %>"  class="form-control" name="discount" required> </td>
          </div>

          <div class=" form-group">
            <label for="company" class=" form-control-label">Select Category: </label>
            <select id="subcategory"  name="subcategory_id" class="form-control">
