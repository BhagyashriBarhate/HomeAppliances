

      <html>

        <body>
        
            <div id="right-panel" class="right-panel">
        
                <% include header %>
        
                <div class="content pb-0">
        
                    <section>
        
                        <div class="content">
                            <div class="animated fadeIn">
                                <div class="row">
        
                                    <div class="col-md-12">
                                        <div class="card">
                                            <div class="card-header col-12 col-md-12">
                                                <div class="row">
                                                    <div class="col-lg-8"><strong class="card-title col-md-8">Product
                                                            Details</strong></div>
        
                                                    <div class="col-lg-4"><a href="/users/addProduct" id="btnnc"
                                                            class="btn btn-primary pull-right"><i class=" fa fa-plus"> Add
                                                               Product </i></a></div>
                                                </div>
                                            </div>
        
                                            <script>
                                                function ConfirmDelete() {
                                                    confirm("Are you sure you want to delete?");
                                                }
                                            </script>
            
                                            <div class="card-body">
                                                <form action="#" method="post">
                                                    <div class="form-inline">

                                                        <!--<button type="button" name="btnall" id="btnall" class="btn btn-primary" style="display: none;"><i class="fa fa-list"></i></button>-->
                                                    </div>
                                                </form>
                                                <% if(product.length>0) { %>
                                                    <input type="text" id="myInput" style="width: 200px;" placeholder="search Product" class="form-control col-md-2"
                                                    required="">&nbsp;&nbsp;
                                                <table id="bootstrap-data-table" class="table table-striped table-bordered">
        
        
                                                    <thead>
                                                        <tr>
                                                            <!--   <th>Select</th>  -->
                                                            <th>Sr.no</th>
                                                            <th>Name</th>
                                                            <th>Subcategory</th>
                                                            <th>Brand</th>
                                                            <th>Image</th>
                                                            <th>Quantity</th>
                                                            <th>Description</th>
                                                            <th>Price</th>
                                                            <th>Warranty year</th>
                                                            <th>Discount Per</th>
                                                            <th>Color</th>
                                                            <th>Action</th>
        
                                                           
                                                        </tr>
                                                    </thead>
                                                    <tbody  id="myTable">
                                                        <% for(var i=0; i<product.length;i++) { %>
                                                        <tr>
                                                            <td ><%= i+1 %></td>
                                                            <td><%= product[i].pname %></td>
                                                            <td><%= product[i].subcategory_id.scname %></td>
                                                            <td><%= product[i].brand_id.brand %></td>

                                                            <td><img style="height: 60px;width:60px;" src='/uplodes/<%= product[i].imagename %>'></td>
                                                            <td><%= product[i].quantity %></td>
                                                            <td><%= product[i].desc %></td>
                                                            <td><%= product[i].price %></td>
                                                            <td><%= product[i].warranty %></td>
                                                            <td><%= product[i].discount %></td>
                                                            <td><%= product[i].color %></td>


                                                            <td>
                                                                <a href='/users/editprod/<%= product[i]._id %>'><i class="fas fa-edit"></i></a>  
                                                                <a href='/users/deleteprod/<%= product[i]._id %>'><i class="fa fa-trash" Onclick="ConfirmDelete()" aria-hidden="true"></i></a>    
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                    </tbody>
                                                </table>
                                                <% } else { %>
                                                No Record Found
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
        
        
                                </div>
                            </div><!-- .animated -->
                        </div><!-- .content -->
                    </section>
        
        
                </div>
        
                <div class="clearfix"></div>
            </div>
        
        </body>
        
        </html>